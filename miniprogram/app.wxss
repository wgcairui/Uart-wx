/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.body{
  padding: 5%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.form{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  border-bottom: solid slategray 1px;
  padding: 10rpx 4rpx;
  margin: 20rpx;
  /* font-size: 26rpx; */
}
