/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  padding: 12px;
}

.container>view {
  margin-top: 12px;
}

.center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.right {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100%;
}

.van-cell-group__title {
  color: black !important
}

.van-button {
  margin-right: 6px;
}

.card {
  position: relative;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: #fff;
  background-clip: border-box;
  border: 1px solid rgba(0, 0, 0, 0.125);
  border-radius: .75rem;
  margin: 8px 0;
  padding: 18px;
  box-shadow: green;
}

.bg-dark-cell>.van-cell:first-child {
  background-color: #343a40 !important;
  color: #fff;
  border-radius: .5rem .5rem 0 0;
}

page {
  /* height: 100%; */
  width: 100%;
  background-color: '#f7f8fa';
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  min-height: 100%;
}


.devs {
  display: flex;
  flex-wrap: wrap;
  margin-top: 1rem;
}

.devs-item {
  width: 48%;
  min-height: 110px;
  margin-bottom: 12rpx;
}

.devs-item:nth-child(2n) {
  margin-left: 4%;
}

.devs-item-card {
  background-color: #fff;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  position: relative;
  /* box-shadow: 1px 1px 3px #fff; */
}

.devs-item-card-body {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 16rpx 12rpx 12rpx 22rpx;
  display: flex;
  flex-direction: column;
}

.devs-item-card-content {
  margin-top: auto;
  display: flex;
}

.devs-item-card-pic {
  margin-left: auto;
  width: 100rpx;
  height: 100rpx;
}

.devs-item-card-pic>image {
  width: 100%;
  height: 100%;
}

.devs-item-card-content text {
  font-size: 24rpx;
  color: #717171;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
}

@import './miniprogram_npm/@vant/weapp/common/index.wxss';