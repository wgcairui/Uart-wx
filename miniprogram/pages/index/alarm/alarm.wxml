<!--miniprogram/pages/index/alarm/alarm.wxml-->
<view class="container">
  <view>
    <van-cell title="选择日期" value="{{date}}" bind:click="showCalendar"></van-cell>
    <van-calendar allow-same-day max-range="5" title="选择查询日期" show="{{dateShow}}" type="range" min-date="{{minDate}}"
      max-date="{{maxDate}}" bind:close="onClose" default-date="{{[maxDate,maxDate]}}" bind:confirm="onConfirm"></van-calendar>
  </view>
  <view>
    <van-swipe-cell wx:for="{{Alarm}}" right-width="{{ 65 }}" wx:key="timeStamp" bind:click="swipeClose"
      id="{{item._id}}">
      <van-cell-group>
        <van-cell title="{{item.mac}}" value="{{item.msg}}" />
      </van-cell-group>
      <view slot="right" class="van-swipe-cellright">确认</view>
    </van-swipe-cell>
  </view>
</view>