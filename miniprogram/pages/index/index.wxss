.van-cell-text {
  display: inline;
  margin-right: 12px;
}

.terminal {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding-top: 10px;
  border-radius: .75rem .75rem 0 0;
  background-image: linear-gradient(to right, #243949 0%, #517fa4 100%);
}

.card {
  padding: 0;
}

.terminal .name {
  font-size: 22px;
  color: aliceblue;
}

.terminal .mac {
  font-size: 12px;
  color: aliceblue;
}

