.van-cell-text {
  display: inline;
  margin-right: 12px;
}

.terminal {
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* text-align: center; */
  padding: 7px;
  margin-left: -1px;
  margin-right: -1px;
  border-radius: .5rem .5rem 0 0;
  /* background-image: linear-gradient(to top, #487ed9 0%, #487ed9 100%); */
  background-image: linear-gradient(to right, #243949 0%, #517fa4 100%);
}

.card {
  padding: 0;
  padding-bottom: 8px;
}

.terminal .name {
  /* font-size: 18px; */
  color: aliceblue;
}

.terminal .mac {
  font-size: 11px;
  color: aliceblue;
  margin-right: .5rem
}

.van-tag {
  margin-left: 3px
}

.content {
  position: relative;
  height: 100%;
  overflow: auto
}

.fiexds {
  height: 20px;
  width: 50px;
  padding: 14px 0;
  border-radius: 45px;
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  opacity: .7;
  z-index: 1000;
  background-color: #ef1f1f;
  box-shadow: 5px 2px 20px 10px rgb(0 0 0 / 30%);
  text-align: center;
  color: #fff;
}

.container>view {
  margin-top: 0;
}

.alarmCard {
  margin-bottom: 12rpx;
}

.alarmItem {
  padding-left: 6rpx;
}

.alarmItemChild {
  background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  border-radius: 12px;
  height: 95%;
  width: 95%;
  display: flex;
  flex-direction: column;
}

.alarmItemChild-title {
  margin: 4% 0 4% 10%;
  margin-left: 10%;
  font-size:38rpx
}

.alarmItemChild-content {
  margin-left: 10%;
  font-size: 28rpx;
  color: #4e4e4e;
}

.alarmItemChild-time {
  margin-top: 4%;
  margin-left: 10%;
  font-size: 26rpx
}

.tab {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}



.text-sm {
  font-size: 24rpx;
  color: #717171;
}

.container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  justify-content: unset;
  background-color: #565656;
  /* background-image: url("http://www.ladishb.com/upload/342021__bg.png"); */
  /* background-image: url(http://www.ladishb.com/upload/342021__bg.png),linear-gradient(to bottom,rgba(220,38,38,0) 16%, #222938 19%, #607d8b 40% ); */
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 0 -100vw,0vw,0vw;
  background-blend-mode: darken;
}

::-webkit-scrollbar {
  display: none; /* Chrome Safari */
}

@import "./index.skeleton.wxss";