{
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "removeComments":true,
    "allowUnreachableCode": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": [],
    "types": [
      "miniprogram-api-typings",
      "./typings",
      "types-uart"
    ],
    "baseUrl": ".",
    "paths": {
      "@vant/weapp/*": ["path/to/node_modules/@vant/weapp/dist/*"]
    }
  },
  "include": [
    "miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}